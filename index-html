      <p className="text-gray-600">{text}</p>
    </div>
  );
}

function FAQ({ q, a }) {
  const [open, setOpen] = useState(false);
  return (
    <div>
      <button onClick={() => setOpen(!open)} className="w-full text-left flex justify-between items-center py-3 font-medium">
        {q} <span>{open ? "−" : "+"}</span>
      </button>
      {open && <p className="pl-4 text-gray-600">{a}</p>}
    </div>
  );
}

